{
  "version": 2,
  "builds": [
    {
      "src": "client-side",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client-side/public",
        "ejs": true
      }
    },
    {
      "src": "server-side",
      "use": "@vercel/node-build",
      "config": {
        "runtime": "nodejs14"
      }
    }
  ],
  "routes": [
    {
      "src": "/*",
      "dest": "client-side/public/views/index.ejs"
    },
    {
      "src": "/api/*",
      "dest": "server-side/index.js"
    }
  ]
}
