{
  "version": 2,
  "builds": [
    {
      "src": "./client-side",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "./client-side/public",
        "ejs": true,
        "include": ["views/**/*"]
      }
    },
    {
      "src": "./server-side",
      "use": "@vercel/node-build",
      "config": {
        "runtime": "nodejs14"
      }
    }
  ],
  "routes": [
    {
      "src": "/*",
      "dest": "client-side/views/index.ejs"
    }
  ]
}
